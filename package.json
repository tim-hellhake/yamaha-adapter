{
  "name": "yamaha-adapter",
  "display_name": "Yamaha",
  "version": "0.2.0",
  "description": "Connect your yamaha audio devices",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/yamaha-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/yamaha-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/yamaha-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "manifest.json",
    "lib/index.js",
    "lib/discovery.js",
    "lib/yamaha.js",
    "lib/yamaha-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "pollInterval": 1000
    },
    "schema": {
      "type": "object",
      "required": [
        "pollInterval"
      ],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The number of milliseconds between two poll intervals"
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "node-ssdp": "^4.0.0",
    "yamaha-yxc-nodejs": "0.0.10"
  },
  "devDependencies": {
    "@types/node": "^13.1.0",
    "@types/node-fetch": "^2.5.4",
    "@types/node-ssdp": "^3.3.0",
    "typescript": "^3.7.4"
  }
}
